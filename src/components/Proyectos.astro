---
const proyectos = [
	{
		titulo: 'Escuelas Digitales',
		categoria: 'Educación',
		descripcion: 'Dotamos de laboratorios de computación y conectividad a escuelas rurales en los departamentos de Lempira, Intibucá y La Paz.',
		estado: 'En curso',
		color: 'bg-primary',
	},
	{
		titulo: 'Emprende Honduras',
		categoria: 'Emprendimiento',
		descripcion: 'Programa de microcréditos y mentorías para mujeres emprendedoras en zonas urbano-marginales de Tegucigalpa y San Pedro Sula.',
		estado: 'En curso',
		color: 'bg-secondary',
	},
	{
		titulo: 'Agua para Todos',
		categoria: 'Inclusión',
		descripcion: 'Construcción de sistemas de agua potable en comunidades indígenas Lencas, beneficiando a más de 2,000 familias.',
		estado: 'Completado',
		color: 'bg-accent',
	},
	{
		titulo: 'Jóvenes Líderes',
		categoria: 'Educación',
		descripcion: 'Formación en liderazgo, ciudadanía activa y resolución de conflictos para jóvenes entre 15 y 25 años en zonas de riesgo.',
		estado: 'En curso',
		color: 'bg-primary-light',
	},
	{
		titulo: 'Cooperación Sur-Sur',
		categoria: 'Cooperación',
		descripcion: 'Intercambio de experiencias con fundaciones de Guatemala, El Salvador y Nicaragua para replicar modelos exitosos.',
		estado: 'En curso',
		color: 'bg-primary-dark',
	},
	{
		titulo: 'Nutrición Infantil',
		categoria: 'Inclusión',
		descripcion: 'Programa de alimentación escolar y educación nutricional en 20 escuelas del corredor seco hondureño.',
		estado: 'Completado',
		color: 'bg-secondary',
	},
];
---

<section id="proyectos" class="py-20 lg:py-28 bg-warm">
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
		<div data-animate class="text-center mb-16">
			<span class="text-secondary font-semibold text-sm uppercase tracking-wider">Proyectos</span>
			<h2 class="text-3xl sm:text-4xl lg:text-5xl font-extrabold text-gray-900 mt-3">
				Iniciativas que <span class="text-primary">generan cambio</span>
			</h2>
			<p class="mt-6 text-lg text-gray-600 max-w-2xl mx-auto">
				Conoce los programas que están transformando la realidad de miles de hondureños.
			</p>
		</div>

		<div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
			{proyectos.map((proyecto, i) => (
				<div data-animate data-delay={String(i * 100)} class="bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-lg transition-shadow group">
					<div class:list={[proyecto.color, "h-2"]}></div>
					<div class="p-6">
						<div class="flex items-center justify-between mb-3">
							<span class="text-xs font-semibold text-primary uppercase tracking-wider">{proyecto.categoria}</span>
							<span class:list={[
								"text-xs font-medium px-2.5 py-0.5 rounded-full",
								proyecto.estado === 'En curso' ? 'bg-green-100 text-green-700' : 'bg-gray-100 text-gray-600'
							]}>
								{proyecto.estado}
							</span>
						</div>
						<h3 class="text-lg font-bold text-gray-900 mb-2 group-hover:text-primary transition-colors">{proyecto.titulo}</h3>
						<p class="text-gray-600 text-sm leading-relaxed">{proyecto.descripcion}</p>
					</div>
				</div>
			))}
		</div>
	</div>
</section>
